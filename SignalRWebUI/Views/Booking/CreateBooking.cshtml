@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Rezervasyon Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="catagoryname">İsim</label>
                                <input type="text" asp-for="Name" class="form-control" placeholder="Rezervasyon kişi isimini giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Telefon</label>
                                <input type="text" asp-for="Phone" class="form-control" placeholder="Telefon numarasını giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Mail Adresi</label>
                                <input type="text" asp-for="Mail" class="form-control" placeholder="Mail Adresini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Rezervasyon Durumu</label>
                                <input type="text" asp-for="Description" class="form-control" placeholder="Rezervasyon Durumu Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Kişi Sayısı</label>
                                <input type="text" asp-for="PersonCount" class="form-control" placeholder="Kişi Sayısını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Tarih</label>
                                <input type="date" asp-for="Date" class="form-control" placeholder="Rezervasyon Tarihini Seçiniz">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Rezervasyon Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


