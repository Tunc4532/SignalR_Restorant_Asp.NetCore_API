@model UpdateMenuTableDto
@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"> Masa Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="MenuTableID" />
                            <div class="form-group">
                                <label for="catagoryname">Masa Adı</label>
                                <input type="text" asp-for="Name" class="form-control" placeholder="Masa Adını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Masa Durumu</label>
                                <input type="text" asp-for="Status" class="form-control" placeholder="Masa Durumunu Giriniz">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Masayı Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


