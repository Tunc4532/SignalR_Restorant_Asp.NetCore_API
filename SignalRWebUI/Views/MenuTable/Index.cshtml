@model List<ResultMenuTableDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Restoran Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Masa Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Masalar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Masa Adı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td><a href="/MenuTable/DeleteMenuTable/@item.MenuTableID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/MenuTable/UpdateMenuTable/@item.MenuTableID" class="btn btn-outline-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/MenuTable/CreateMenuTable/" class="btn btn-outline-success">Yeni Katagori Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



