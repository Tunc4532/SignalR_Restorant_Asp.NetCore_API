@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Alt İleişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="ContactID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="catagoryname">Konum</label>
                                <input type="text" asp-for="Location" class="form-control" placeholder="Lokasyon Url Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Telefon</label>
                                <input type="text" asp-for="Phone" class="form-control" placeholder="Telefon Numaranızı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Mail</label>
                                <input type="email" asp-for="Mail" class="form-control" placeholder="Mail Bilginiz Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" placeholder="Açıklama Alnı"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Restoran Adı</label>
                                <input type="text" asp-for="FooterTittle" class="form-control" placeholder="Restoran Adını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Açık Günler</label>
                                <input type="text" asp-for="OpenDays" class="form-control" placeholder="Restoran Açık Gün Bilgisi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Açık Gün Açıklaması</label>
                                <input type="text" asp-for="OpenDaysDescription" class="form-control" placeholder="Restoran Açık Gün Açıklamasını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Açılış Ve Kapanış Saat</label>
                                <input type="text" asp-for="OpenHours" class="form-control" placeholder="Restoran Açılış Ve Kapanış Saat Bilgisini Giriniz">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">İletişim Bilgisini Güncele</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

