@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    string durum;
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün İndirimleri Aşağıda Yer Almaktadır.
                            Tema Bütünlüğü için 2 adet indirimli ürün girişi yapınınız!!!
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Aktif Yap</th>
                                    <th scope="col">Pasif Yap</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if(item.Status==true){
                                        durum = "Aktif";
                                    }
                                    else{
                                        durum = "Pasif";
                                    }
                                    <tr>
                                        <td>@item.DiscountID</td>
                                        <td>@item.Tittle</td>
                                        <td>@item.Amount</td>
                                        <td>@durum</td>
                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-warning">Güncelle</a></td>
                                        <td><a href="/Discount/ChangeStatusToTrueDiscount/@item.DiscountID" class="btn btn-outline-success">Aktif</a></td>
                                        <td><a href="/Discount/ChangeStatusToFalseDiscount/@item.DiscountID" class="btn btn-outline-info">Pasif</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Discount/CreateDiscount/" class="btn btn-outline-success">Yeni İndirim Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


