@model List<ResultMessageDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesajlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Gelen Mesajlar</div>
                    </div>
                    <div class="text-center">
                        <a href="/AdminMessage/FalseMessage/">
                            <i class="la la-power-off">Çöp Kutusuna Git</i>
                        </a>
                    </div>
                    
                    <div class="card-body">
                        <div class="card-sub">
                            Mesajlar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Gönderen</th>
                                    <th scope="col">Konu</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Görüntüle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Mail</td>
                                        <td><a href="/AdminMessage/ChangeStatusToFalse/@item.MessageID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="#" class="btn btn-outline-info">Görüntüle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



