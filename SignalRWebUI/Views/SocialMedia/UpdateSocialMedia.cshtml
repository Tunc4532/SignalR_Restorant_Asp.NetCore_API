@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Sosyal Medya Güncelleme Ekranı</div>
                        </div>
                        <input type="hidden" asp-for="SocialMediaID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="catagoryname">Platform Adı</label>
                                <input type="text" asp-for="Tittle" class="form-control" placeholder="Platform Adını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Ikon</label>
                                <input type="text" asp-for="Icon" class="form-control" placeholder="Ikon değeri Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Platform Url</label>
                                <textarea rows="5" class="form-control" asp-for="Url" placeholder="Platform Url Alnı"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Sosyal Platform Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



