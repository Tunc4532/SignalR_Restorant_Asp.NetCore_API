@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Hakkımızda Yazı Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="catagoryname">Başlık</label>
                                <input type="text" asp-for="Tittle" class="form-control" placeholder="Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Görsel</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Görsel Url Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="Description" placeholder="Açıklama Alnı"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Yeni Yazıyı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

