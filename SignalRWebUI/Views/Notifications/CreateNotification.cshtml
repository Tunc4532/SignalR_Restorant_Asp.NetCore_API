@model CreateNotificationDto
@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Bildirim Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="catagoryname">Bildirim Türü</label>
                                <input type="text" asp-for="Type" class="form-control" placeholder="clas değeri giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Bildirim İkonu</label>
                                <input type="text" asp-for="Icon" class="form-control" placeholder="İkon Url giriniz">
                            </div>
                            <div class="form-group">
                                <label for="catagoryname">Açıklama</label>
                                <input type="text" asp-for="Description" class="form-control" placeholder="Bildirim Açıklaması">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Bildirimi Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

